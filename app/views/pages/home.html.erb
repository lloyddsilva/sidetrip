<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<%= javascript_include_tag "jquery.ui.addresspicker" %>

<script type="text/javascript">
  $(function() {
    var addresspicker = $( "#addresspicker" ).addresspicker({
      regionBias: "sg"});
  });
</script>


  <div id="wrap">

        <!-- /Header Section -->

        <div id="landing">
            <div class="header-image">
                <div class="headline">


                    <div class="container">

                        <div class="header">
                            <ul class="nav nav-pills pull-right">
                                <li><a href="/users/sign_in">Login</a>
                                </li>
                                <li class="active"><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign up</a>
                                </li>

                            </ul>
                            <h3 class="text-muted"><span class="glyphicon glyphicon-dashboard"></span> Side<span class="sec-brand">Trip</span></h3>
                        </div>

                        <h1>Find places to visit around your busy schedule.</h1>
                        <p class="subline">Over <strong>15,782</strong> Places to choose from</p>


                    </div>
                </div>


                <div class="search-block">
                    <div class="container">


                        <%= simple_form_for(@search) do |f| %>
                          <%= f.error_notification %>

                          <div class="form-inputs">
                              <div class="row">
                                <div class="col-md-4">
                                    <%= f.input :address, label: false, :placeholder => "Where are you now?", :input_html => {:id => "addresspicker", :class => 'form-control input-lg'} %>
                                </div>

                                <div class="col-md-3" id="event-time-picker-1">
                                    <%= f.text_field :time_from, label: false, :placeholder => "Time from", :class => 'form-control input-lg', "data-format" => "hh:mm" %>
                                    <span class="add-on">
                                      <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar">
                                      </i>
                                    </span>
                                </div>
                                <div class="col-md-3" id="event-time-picker-2">
                                    <%= f.text_field :time_to, label: false, :placeholder => "Time till", :class => 'form-control input-lg', "data-format" => "hh:mm" %>
                                    <span class="add-on">
                                      <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar">
                                      </i>
                                    </span>

                                </div>
                                <div class="col-md-2">

                                    <%= f.button :submit, "Go", :class => "pull-right", :input_html => {:class => 'btn btn-success btn-lg'} %>
                                </div>
                            </div>
                            </div>

                        <% end %>

                    </div>
                </div>
            </div>
            <!-- /header-image -->
        </div>

        <!-- /Header Section -->



        <!-- Section 1 -->

        <div class="section secondary">
            <div class="container">

                <div class="row">
                    <div class="col-lg-4 col-md-4 animated slideInDown">
                        <h4> Thousands of tourist spots to choose from</h4>
                        <p>We choose all the tourist spots you can see in the limited time that you have.</p>
                    </div>
                    <div class="col-lg-4 col-md-4 animated fadeInUpBig">
                        <h4>Making an impromptu itinerary has never been easier</h4>
                        <p>Your itinerary, right now.</p>
                    </div>
                    <div class="col-lg-4 col-md-4 animated slideInRight">
                        <h4>Works worldwide</h4>
                        <p>Works in every major city in the world. Use the same site in every city.</p>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->

        </div>

        <!-- /Section 1 -->



    </div>
    <!-- /Wrap -->

    <script type="text/javascript">
  $(function() {
    $('#event-time-picker-1').datetimepicker({ pickDate: false, pickSeconds: false });
    $('#event-time-picker-2').datetimepicker({ pickDate: false, pickSeconds: false });
  });
</script>